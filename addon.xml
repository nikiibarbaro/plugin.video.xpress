<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.xpress" name="xPress" version="0.1.8" provider-name="xPress-Team">
    <requires>
        <import addon="script.module.requests"/>
        <import addon="script.module.beautifulsoup4"/>
        <import addon="script.module.resolveurl" version="5.1.60"/>
        <import addon="script.module.web-pdb"/>
        <import addon="script.module.six" version="1.11.0"/>
        <import addon="script.module.inputstreamhelper" version="0.3.3" optional="true"/>
        <!-- for remote debug -->
        <!--<import addon="script.module.pydevd" optional="true"/>-->
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="de">xPress - Watch everything!</summary>
        <description lang="de">Dieses Addon stellt dir verschiedenste Medieninhalte vieler deutscher Anbieter zur Verfügung</description>
        <disclaimer lang="de">Die von diesem Addon dargestellten Inhalte werden von den Erstellern des Addons weder gehostet oder verbreitet, noch stehen die Ersteller in irgendeiner Beziehung zu den Content-Anbietern.
        </disclaimer>
        <source>https://github.com/nikiibarbaro/plugin.video.xpress</source>
        <license>GNU GPLv3</license>
        <platform>all</platform>
        <news>
            [B]v0.1.0[/B]
            - xPress unterstützt jetzt automatische Updates
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
            <screenshot>resources/art/screenshot1.jpg</screenshot>
            <screenshot>resources/art/screenshot2.jpg</screenshot>
            <screenshot>resources/art/screenshot3.jpg</screenshot>
        </assets>
    </extension>
</addon>
